<%- include('partial/header') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="text-center mb-4">
            <img src="<%= hod.image %>" 
                 alt="Profile Image" 
                 class="rounded-circle img-thumbnail"
                 style="width: 150px; height: 150px; object-fit: cover;">
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="mb-0">Full Name</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= hod.name %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="mb-0">Role</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= hod.type %>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-sm-3">
              <h6 class="mb-0">Department</h6>
            </div>
            <div class="col-sm-9 text-secondary">
              <%= hod.department %>
            </div>
          </div>
          
          <div class="row">
            <div class="col-sm-12">
              <a href="/hod/<%= hod._id %>/edit" class="btn btn-primary">Edit Profile</a>
              <a href="/hod/home" class="btn btn-secondary">Back to Dashboard</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partial/footer') %>
