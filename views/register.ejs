<%- include('partial/header') %>

<link rel="stylesheet" href="/css/styles.css">

<div class="alert-container">
    <% if (locals.errors) { %>
      <div class="alert alert-danger" role="alert">
        <% locals.errors.forEach(function(error) { %>
          <h5><%= error.msg %></h5>
        <% }); %>
      </div>
    <% } %>
</div>

<div class="container">
    <form action="/student/register" method="POST">
        <h2 class="text-center">Register</h2>
        
        <div class="form-group form-inline">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" name="name" placeholder="name" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Username</label>
            <input class="form-control" type="text" name="username" placeholder="username" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Password</label>
            <input class="form-control" type="password" name="password" placeholder="password" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Confirm Password</label>
            <input class="form-control" type="password" name="password2" placeholder="Confirm password" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Department</label>
            <input class="form-control" type="text" name="department" placeholder="Department" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Hostel</label>
            <input class="form-control" type="text" name="hostel" placeholder="Hostel" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Image Url</label>
            <input class="form-control" type="text" name="image" placeholder="img url" />
        </div>

        <div class="form-group form-inline">
            <label class="form-label">Type</label>
            <select class="form-control" name="type" required>
                <option value="student">Student</option>
                <option value="hod">HOD</option>
                <option value="warden">Warden</option>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-primary btn-block">
                Submit
            </button>
        </div>
    </form>
    <a href="/">Back</a>
</div>

<%- include('partial/footer') %>
